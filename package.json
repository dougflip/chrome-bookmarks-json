{
  "name": "@dougflip/chrome-bookmarks-json",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run compile && vite build && run-p copy-assets build:main",
    "build:main": "tsc -p tsconfig-main.json",
    "compile": "tsc --noEmit",
    "compile:watch": "npm run compile -- --watch",
    "copy-assets": "cp manifest.json ./dist && cp src/icon.png ./dist",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint:code": "eslint src --max-warnings 0",
    "lint": "run-p format:check lint:code",
    "serve": "vite --host",
    "start": "run-p compile:watch serve",
    "test": "vitest",
    "test:ci": "CI=1 vitest run --coverage"
  },
  "dependencies": {
    "@mantine/core": "^4.2.9",
    "@mantine/hooks": "^4.2.9",
    "promise-file-reader": "^1.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.3.0",
    "tabler-icons-react": "^1.48.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/chrome": "^0.0.190",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.2",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.10",
    "vitest": "^0.15.1"
  },
  "msw": {
    "workerDirectory": ""
  }
}
